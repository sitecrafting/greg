{
  "name": "sitecrafting/greg",
  "description": "A de-coupled calendar solution for WordPress and Timber",
  "license": "MIT",
  "type": "wordpress-plugin",
  "authors": [
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.4",
    "rlanvin/php-rrule": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "johnpbloch/wordpress-core-installer": "^1.0",
    "johnpbloch/wordpress-core": "5.5.1",
    "mnsami/composer-custom-directory-installer": "^1.1",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "^2.3",
    "szepeviktor/phpstan-wordpress": "^0.6.6",
    "paulthewalton/acf-stubs": "^5.8.7",
    "timber/timber": "2.x-dev",
    "php-stubs/wp-cli-stubs": "^2.4.0"
  },
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "extra": {
    "wordpress-install-dir": {
      "johnpbloch/wordpress-core": "wp"
    }
  },
  "autoload": {
    "psr-4": {
      "Greg\\": "src/"
    },
    "files": ["src/api.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Greg\\Integration\\": "test/integration/"
    }
  },
  "scripts": {
    "unit": [
      "./vendor/bin/phpunit --group unit"
    ],
    "integration": [
      "./vendor/bin/phpunit --group integration"
    ],
    "test": [
      "./vendor/bin/phpunit"
    ],
    "sniff": [
      "./vendor/bin/phpcs"
    ],
    "phpstan": [
      "./vendor/bin/phpstan analyse"
    ]
  }
}
